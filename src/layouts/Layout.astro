---
import "../assets/styles/global.css";
import MainHead from "./MainHead.astro";
import Footer from "../components/Footer.astro";
import Nav from "../components/Nav.astro";
const {
  title = "My Astro Blog",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <MainHead title = {title}/>
  <body>
	
	<Nav/>

    <slot />

	<Footer/>

  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
